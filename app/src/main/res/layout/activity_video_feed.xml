<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".presentation.video.activities.DroneCameraActivity">

    <!-- Video Feed -->
    <TextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Gradiente superior para melhor visualização -->
    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:background="@drawable/gradient_top_fade" />

    <!-- Status Bar Superior -->
    <LinearLayout
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="#A0000000"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/status_connection_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:drawablePadding="6dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Drone IFMA"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_signal_wifi_4_bar"
                app:drawableTint="#4CAF50" />

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/status_battery_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:fontFamily="@font/roboto_medium"
                android:text="98%"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/ic_battery_full"
                app:drawableTint="#4CAF50" />

            <ImageButton
                android:id="@+id/button_settings"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Configurações"
                android:padding="4dp"
                android:src="@drawable/ic_settings"
                app:tint="#4CAF50" />

        </LinearLayout>

    </LinearLayout>

    <!-- Painel de Telemetria (Ocultável) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/telemetry_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginStart="16dp"
        android:layout_marginTop="70dp"
        android:visibility="visible"
        app:cardBackgroundColor="#F0FFFFFF"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="TELEMETRIA"
                android:textColor="#1B5E20"
                android:textSize="11sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="6dp"
                android:background="#20000000" />

            <!-- Altitude -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_altitude"
                    app:tint="#2E7D32" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Alt:"
                    android:textColor="#424242"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_altitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="25.3m"
                    android:textColor="#2E7D32"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Velocidade -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_speed"
                    app:tint="#2E7D32" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Vel:"
                    android:textColor="#424242"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="8.5 km/h"
                    android:textColor="#2E7D32"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Distância -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_distance"
                    app:tint="#2E7D32" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Dist:"
                    android:textColor="#424242"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="142m"
                    android:textColor="#2E7D32"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- GPS -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_gps"
                    app:tint="#2E7D32" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="GPS:"
                    android:textColor="#424242"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_gps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="12 sats"
                    android:textColor="#2E7D32"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Controles de Câmera e Configurações (Direita Superior) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="16dp"
        android:gravity="end"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_cell_camera"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_background_square"
                android:contentDescription="Trocar Câmera"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_phone_android"
                app:tint="#4CAF50" />

                <ImageButton
                    android:id="@+id/button_take_photo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/button_background_square"
                    android:contentDescription="Tirar Foto"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_take_photo"
                    app:tint="#4CAF50" />

                <ImageButton
                    android:id="@+id/button_record_video"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/button_background_square"
                    android:contentDescription="Gravar Vídeo"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_videocam"
                    app:tint="#D32F2F" />

                <ToggleButton
                    android:id="@+id/button_toggle_overlay"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/button_background_square"
                    android:checked="true"
                    android:drawableTop="@drawable/toggle_overlay_selector"
                    android:padding="8dp"
                    android:textOff=""
                    android:textOn="" />

                <ImageButton
                    android:id="@+id/button_toggle_telemetry"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/button_background_square"
                    android:contentDescription="Mostrar/Ocultar Telemetria"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_dashboard"
                    app:tint="#4CAF50" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/emergency_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"  app:cardBackgroundColor="#D32F2F"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_warning"
                    app:tint="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="PARADA"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Controles de Voo Principais (Esquerda) -->
    <LinearLayout
        android:id="@+id/flight_controls_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Botão Decolar -->
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="6dp"
            app:cardBackgroundColor="#4CAF50"
            app:cardCornerRadius="28dp"
            app:cardElevation="8dp">

            <ImageButton
                android:id="@+id/button_takeoff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Decolar"
                android:padding="14dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_drone_takeoff"
                app:tint="@android:color/white" />

        </androidx.cardview.widget.CardView>

        <!-- Botão Pousar -->
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="#FF5722"
            app:cardCornerRadius="28dp"
            app:cardElevation="8dp">

            <ImageButton
                android:id="@+id/button_land"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Pousar"
                android:padding="14dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_drone_land"
                app:tint="@android:color/white" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Controles de Movimento (Inferior) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="#A0000000"
                app:cardCornerRadius="21dp"
                app:cardElevation="4dp">

                <ImageButton
                    android:id="@+id/button_up"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Subir"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_upward"
                    app:tint="#4CAF50" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:cardBackgroundColor="#A0000000"
                app:cardCornerRadius="21dp"
                app:cardElevation="4dp">

                <ImageButton
                    android:id="@+id/button_down"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Descer"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_downward"
                    app:tint="#4CAF50" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardBackgroundColor="#A0000000"
            app:cardCornerRadius="60dp"
            app:cardElevation="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <ImageButton
                    android:id="@+id/button_forward"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Frente"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_up"
                    app:tint="#4CAF50" />

                <ImageButton
                    android:id="@+id/button_backward"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Trás"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_down"
                    app:tint="#4CAF50" />

                <ImageButton
                    android:id="@+id/button_left"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Esquerda"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_left"
                    app:tint="#4CAF50" />

                <ImageButton
                    android:id="@+id/button_right"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Direita"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#4CAF50" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/roboto_bold"
                    android:text="IFMA"
                    android:textColor="#4CAF50"
                    android:textSize="12sp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="#A0000000"
                app:cardCornerRadius="21dp"
                app:cardElevation="4dp">

                <ImageButton
                    android:id="@+id/button_rotate_left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Rotacionar Esquerda"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_rotate_left"
                    app:tint="#4CAF50" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:cardBackgroundColor="#A0000000"
                app:cardCornerRadius="21dp"
                app:cardElevation="4dp">

                <ImageButton
                    android:id="@+id/button_rotate_right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Rotacionar Direita"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_rotate_right"
                    app:tint="#4CAF50" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
