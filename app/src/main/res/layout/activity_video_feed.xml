<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.VideoFeedActivity">

    <!-- A TextureView para o vídeo do drone. Ocupa o fundo. -->
    <TextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- A OverlayView para desenhar os retângulos. Fica por cima da TextureView. -->
    <com.sloth.registerapp.vision.OverlayView
        android:id="@+id/overlay_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Painel de Controle Flutuante -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#80000000"
        android:padding="8dp">

        <!-- Botão para Trocar Câmera -->
        <ImageButton
            android:id="@+id/button_switch_camera"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_camera"
            android:scaleType="fitCenter"
            android:contentDescription="Trocar Câmera" />

        <!-- Botão para Tirar Foto -->
        <ImageButton
            android:id="@+id/button_take_photo"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_camera"
            android:scaleType="fitCenter"
            android:contentDescription="Tirar Foto" />

        <!-- Botão para Ligar/Desligar Overlay -->
        <ToggleButton
            android:id="@+id/button_toggle_overlay"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/toggle_overlay_selector"
            android:textOn=""
            android:textOff=""
            android:checked="true" />

    </LinearLayout>

</FrameLayout>